<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb" >

    <RelativeLayout
        android:id="@+id/pubish_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/daohangbg" >

        <ImageView
            android:id="@+id/img_publish_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发布新状态 "
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_publish_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:src="@drawable/fenxiang" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pubish_rl"
        android:background="#fff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_publish_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_publish_add"
            android:layout_below="@id/pubish_rl"
            android:background="#fff"
            android:gravity="top"
            android:hint="想分享点什么呢？"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <ImageView
            android:id="@+id/img_publish_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/kuozhan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dingwei" />

        <TextView
            android:id="@+id/tv_setposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="天津市西青区" />
    </LinearLayout>

    <Button
        android:id="@+id/but_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_position"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ontouch"
        android:text="发布"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>