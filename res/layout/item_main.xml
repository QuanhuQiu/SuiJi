<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/img_main_01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/youkeicon" />

    <TextView
        android:id="@+id/tv_main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_main_01"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/img_main_01"
        android:text="2015-11-13"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_main_date"
        android:layout_alignTop="@+id/img_main_01"
        android:text="@string/youke"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/guilin"
        android:scaleType="centerCrop"
        android:layout_below="@id/img_main_01" >
    </ImageView>

    <ImageView
        android:id="@+id/img_main_dibiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_main_content"
        android:layout_below="@+id/img_main_content"
        android:src="@drawable/dibiao" />

    <TextView
        android:id="@+id/tv_main_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_main_dibiao"
        android:layout_toRightOf="@id/img_main_dibiao"
        android:text="桂林"
        android:textSize="8sp" />

</RelativeLayout>