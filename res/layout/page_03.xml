<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_notinput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/_beijing" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/_head" />

        <TextView
            android:id="@+id/tv_inputname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:text="@string/please_login" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_inputname"
            android:layout_toLeftOf="@+id/head"
            android:background="@drawable/select_shape"
            android:clickable="true"
            android:text="@string/register"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_inputname"
            android:layout_toRightOf="@+id/head"
            android:background="@drawable/select_shape"
            android:clickable="true"
            android:text="@string/login"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/_fengexian" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/_fengexian" />

        <TextView
            android:id="@+id/updatename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select"
            android:clickable="true"
            android:drawableLeft="@drawable/_xuigainicheng"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fengexian" />

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select"
            android:clickable="true"
            android:drawableLeft="@drawable/_wodefabu"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fengexian" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fengexian" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select"
            android:clickable="true"
            android:drawableLeft="@drawable/_guanyusuiji"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fengexian" />

        <TextView
            android:id="@+id/tv_problems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select"
            android:clickable="true"
            android:drawableLeft="@drawable/_wentifankui"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fengexian" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ontouch"
            android:text="@string/exit"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>